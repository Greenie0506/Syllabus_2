<!DOCTYPE html>
<html>
<head>
<h1><%= title %></h1>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= notice %>
<%= alert %>
<%= yield %>
<%= link_to "Home", root_path %>
<div id="user_nav">
	<% if user_signed_in? %>
	Signed in as <%= current_user.email %>. Not you?
	<%= link_to "Sign out", destroy_user_session_path  %>
	<% else %>
	<%= link_to "Sign_up", new_user_registration_path%> or <%= link_to "Sign in", new_user_session_path %>
	<% end %><br/>

</div>	

</body>
</html>
